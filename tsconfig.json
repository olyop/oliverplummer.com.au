{
	"extends": "@oly_op/tsconfig",
	"compilerOptions": {
		"baseUrl": "./src",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"moduleResolution": "bundler",
		"module": "ESNext",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"exactOptionalPropertyTypes": false,
		"types": ["vite/client"]
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
